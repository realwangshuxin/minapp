}
.search{
  width: 90%;
  display: flex;
  height: 70rpx;
  align-items: center;
  border: 2rpx solid #000;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-top: 30rpx;
}
.search_img{
  width: 5%;
  height: 50%;
  margin-left: 15rpx;
}
.search input{
  font-size: 24rpx;
  margin-left: 20rpx
}
.txt{
  display: flex;
  width: 100%;
  height: 60rpx;
  justify-content: space-between;
  align-items: center
}
.more{
  width: 38%;
  font-size: 24rpx;
  display: flex;
  align-items:center;
}
.more text{
  margin-left: 120rpx
}
.right{
  width: 12%;
  height: 30rpx;
  margin-left: 10rpx
}
.jx{
  width: 20%;
  background: #ff0;
  height: 20rpx;
  border-radius: 30rpx;
  position: absolute;
  opacity: .6;
