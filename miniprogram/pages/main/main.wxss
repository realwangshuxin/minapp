}
.ac{
  width: 100%;
  padding-left: 30rpx;
  height: 400rpx;
  position: relative
}
.ac image{
  width: 40%;
  height: 100%
}
.right_txt{
  position: absolute;
  top:0;
  right: 0rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 55%;
}
.r_title{
  font-size: 30rpx;
  margin-bottom: 10rpx
}
.add{
  font-size: 34rpx;
  margin-bottom: 10rpx
}
.date,.add2{
  color: #aaa;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.bto{
